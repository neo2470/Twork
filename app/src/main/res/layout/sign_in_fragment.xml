<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/sign_layout_padding_horizontal"
    android:paddingRight="@dimen/sign_layout_padding_horizontal">

    <ImageView
        android:id="@+id/avaterView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:adjustViewBounds="true"
        android:src="@drawable/test" />

    <EditText
        android:id="@+id/userId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avaterView"
        android:layout_marginTop="80dp"
        android:background="@drawable/edit_username_bg"
        android:hint="@string/sign_username"
        android:singleLine="true" />

    <View
        android:id="@+id/editDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/userId"
        android:alpha="0.7"
        android:background="@color/sign_edit_divider" />

    <EditText
        android:id="@+id/userPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDivider"
        android:background="@drawable/edit_userpwd_bg"
        android:hint="@string/sign_password"
        android:inputType="textPassword"
        android:singleLine="true" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userPwd"
        android:text="@string/sign_in"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/forgotPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="@string/sign_forgot"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>